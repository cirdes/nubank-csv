{
  "manifest_version": 2,

  "name": "Nubank - Exportador de faturas",
  "description": "Essa extens√£o permite que faturas sejam exportadas em formato csv",
  "version": "1.0",

  "page_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "declarativeContent"
  ],
  "content_scripts": [
  {
    "matches": ["https://conta.nubank.com.br/*"],
    "js": ["content.js"]
  }],
  "background": {
      "scripts": ["bg.js"],
      "persistent": false
    }
}
